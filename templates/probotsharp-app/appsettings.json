{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ProbotSharp": {
    "App": {
      "AppId": "GITHUB_APP_ID",
      "WebhookSecret": "development",
      "PrivateKeyPath": "private-key.pem"
    },
    "Adapters": {
      "Cache": {
        "Provider": "InMemory",
        "Options": {
          "ExpirationMinutes": 60
        }
      },
      "Idempotency": {
        "Provider": "InMemory",
        "Options": {
          "ConnectionString": "Data Source=:memory:",
          "ExpirationHours": 24
        }
      },
      "Persistence": {
        "Provider": "InMemory"
      },
      "ReplayQueue": {
        "Provider": "InMemory",
        "Options": {
          "MaxRetryAttempts": 3,
          "RetryBaseDelayMs": 1000,
          "PollIntervalMs": 1000
        }
      },
      "DeadLetterQueue": {
        "Provider": "InMemory"
      },
      "Metrics": {
        "Provider": "NoOp"
      },
      "Tracing": {
        "Provider": "NoOp"
      }
    }
  }
}
