{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "DetailedErrors": false,
  "ProbotSharp": {
    "Adapters": {
      "Cache": {
        "Provider": "Redis",
        "Options": {
          "ConnectionString": "localhost:6379",
          "ExpirationMinutes": 60
        }
      },
      "Idempotency": {
        "Provider": "Redis",
        "Options": {
          "ConnectionString": "localhost:6379",
          "ExpirationHours": 24
        }
      },
      "Persistence": {
        "Provider": "PostgreSQL"
      },
      "DeadLetterQueue": {
        "Provider": "Database"
      },
      "Metrics": {
        "Provider": "OpenTelemetry",
        "Options": {
          "MeterName": "MyBot",
          "Version": "1.0.0",
          "OtlpEndpoint": "http://localhost:4317"
        }
      },
      "Tracing": {
        "Provider": "OpenTelemetry",
        "Options": {
          "OtlpEndpoint": "http://localhost:4317"
        }
      }
    }
  }
}
