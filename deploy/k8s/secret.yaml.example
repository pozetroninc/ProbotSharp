apiVersion: v1
kind: Secret
metadata:
  name: probotsharp-secrets
  namespace: probotsharp
  labels:
    app: probotsharp
    app.kubernetes.io/name: probotsharp
type: Opaque
stringData:
  # PostgreSQL Database Connection String
  # Format: Host=hostname;Port=5432;Database=probotsharp;Username=user;Password=pass
  database-connection-string: "Host=postgres.database.svc.cluster.local;Port=5432;Database=probotsharp;Username=probotsharp;Password=CHANGE_ME"

  # GitHub App ID (numeric)
  github-app-id: "123456"

  # GitHub Webhook Secret (configure in GitHub App settings)
  github-webhook-secret: "CHANGE_ME_webhook_secret_from_github"

  # GitHub App Private Key (PEM format - keep the newlines and header/footer)
  github-private-key: |
    -----BEGIN RSA PRIVATE KEY-----
    CHANGE_ME_paste_your_private_key_here
    MIIEpAIBAAKCAQEA1234567890abcdef...
    ...
    -----END RSA PRIVATE KEY-----

  # Redis Connection String
  # Format: hostname:port,password=pass,ssl=True,abortConnect=False
  redis-connection-string: "redis.cache.svc.cluster.local:6379,password=CHANGE_ME,abortConnect=False"

---
# INSTRUCTIONS:
# 1. Copy this file to secret.yaml (do NOT commit secret.yaml to git)
# 2. Replace all CHANGE_ME placeholders with actual values
# 3. Apply to your cluster: kubectl apply -f secret.yaml
# 4. Verify: kubectl get secret probotsharp-secrets -n probotsharp
#
# For production, consider using:
# - Sealed Secrets: https://github.com/bitnami-labs/sealed-secrets
# - External Secrets Operator: https://external-secrets.io/
# - HashiCorp Vault: https://www.vaultproject.io/
# - Cloud-native secret managers (AWS Secrets Manager, Azure Key Vault, GCP Secret Manager)
