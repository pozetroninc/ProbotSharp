{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "//": "Hybrid configuration - Redis for speed, PostgreSQL for persistence",
  "//": "Suitable for: medium traffic, eventual consistency acceptable",

  "ProbotSharp": {
    "Adapters": {
      "Cache": {
        "Provider": "Redis",
        "Options": {
          "ConnectionString": "localhost:6379",
          "InstanceName": "ProbotSharp:",
          "ExpirationMinutes": "60"
        }
      },
      "Idempotency": {
        "Provider": "Redis",
        "Options": {
          "ConnectionString": "localhost:6379",
          "ExpirationHours": "24"
        }
      },
      "Persistence": {
        "Provider": "PostgreSQL",
        "Options": {
          "ConnectionString": "Host=localhost;Database=probotsharp;Username=postgres;Password=postgres"
        }
      },
      "ReplayQueue": {
        "Provider": "InMemory",
        "Options": {
          "MaxRetryAttempts": "3"
        }
      },
      "Metrics": {
        "Provider": "OpenTelemetry",
        "Options": {
          "MeterName": "ProbotSharp"
        }
      },
      "Tracing": {
        "Provider": "ActivitySource",
        "Options": {
          "SourceName": "ProbotSharp"
        }
      }
    }
  }
}
