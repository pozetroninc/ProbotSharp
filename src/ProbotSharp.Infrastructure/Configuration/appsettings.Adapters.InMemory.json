{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "//": "Minimal in-memory configuration - zero infrastructure dependencies",
  "//": "Perfect for: development, testing, simple bots, < 100 webhooks/hour",

  "ProbotSharp": {
    "Adapters": {
      "Cache": {
        "Provider": "InMemory",
        "Options": {
          "ExpirationMinutes": "60"
        }
      },
      "Idempotency": {
        "Provider": "Database",
        "Options": {
          "ExpirationHours": "24"
        }
      },
      "Persistence": {
        "Provider": "InMemory",
        "Options": {}
      },
      "ReplayQueue": {
        "Provider": "InMemory",
        "Options": {
          "MaxRetryAttempts": "3",
          "RetryBaseDelayMs": "1000"
        }
      },
      "Metrics": {
        "Provider": "NoOp",
        "Options": {}
      },
      "Tracing": {
        "Provider": "NoOp",
        "Options": {}
      }
    }
  }
}
